{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "lua": "lua-format",
    "sh": "shfmt"
  },
  "snippets.textmateSnippetsRoots": [
    "~/.config/nvim/vs-code-snippets"
  ]
}